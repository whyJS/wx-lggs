<!-- 首页轮播 -->
<view class="sliderWrapper">
  <swiper
    autoplay="true">
    <block wx:for="{{imgUrls}}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
</view>
<!-- 首页topbar -->
