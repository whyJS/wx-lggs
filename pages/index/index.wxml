</view>
<!-- 首页新闻 -->
<view class="xinwen">
  <image src="./topbar/x1.png" class="img1"></image>
  <view class="xinwencontent">
      <image src="./topbar/x2.png" class="img2"></image>
      <swiper vertical="true" class="xinwenslider"
        autoplay="true">
       
          <swiper-item wx:for="{{xinwenlist}}" wx:key="index" class="xinwenslider-item">
            <text>{{item}}</text>
          </swiper-item>
      
      </swiper>
      <image src="./topbar/x3.png" class="img3"></image>
      <view class="chakan">查看</view>
  </view>
</view>
