/* pages/mine/mine.wxss */
.m_head1{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #f1f1f1;
  border-bottom: 10rpx solid #f7f7f7;
}
.m_head1 .m_img{
  width: 120rpx;
  height: 120rpx;
  padding-right: 28rpx;
}
.m_login{
  flex: 1;
}
.m_login .v1{
  font-size: 34rpx;
  height: 48rpx;
  color: #333;
}
.m_login .v2{
  font-size: 26rpx;
  width: 188rpx;
  height: 62rpx;
  color: #fff;
  background: #71BA2B;
  border-radius: 36rpx;
  text-align: center;
  line-height: 62rpx;
}

.m_bar{
  width: 100%;
  box-sizing: border-box;
  padding: 22rpx 38rpx 22rpx 38rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f1f1f1;
}
.m_bar .m_bar_v1{
  font-size: 28rpx;
  color: #333;
}
.m_bar .m_bar_v2{
  font-size: 22rpx;
  color: #999;
  flex: 1;
  text-align: right;
  padding-right: 10rpx;
}
.m_bar .m_bar_v3{
  width: 10rpx;
  height: 16rpx;
}
.m_bar2{
  width: 100%;
  box-sizing: border-box;
  padding-top: 36rpx;
  padding-bottom: 36rpx;
  display: flex;
  align-items: center;
  border-bottom: 10rpx solid #f7f7f7;
}
.m_bar2 .m_bar2_v1{
  width: 25%;
  text-align: center;
}
.m_bar2_v1 image{
  width: 50rpx;
  height: 50rpx;
}
.m_bar2_v1 view{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}
/* 列表 */

.listitem{
  width:100%;
  box-sizing: border-box;
  padding: 32rpx 38rpx 32rpx 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f1f1f1;
}
.listitem .list1{
  width: 38rpx;
  height: 38rpx;
}
.listitem .list2{
 flex: 1;
 padding-left: 12rpx;
 font-size: 28rpx;
 color: #333;
}
.listitem .list3{
  width: 12rpx;
  height: 24rpx;
}